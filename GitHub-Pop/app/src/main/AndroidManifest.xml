<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.igormeira.githubpop">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".di.MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name="com.igormeira.githubpop.view.about.AboutActivity" />
        <activity
            android:name="com.igormeira.githubpop.view.login.LoginActivity" />
        <activity
            android:name="com.igormeira.githubpop.view.selection.SelectionActivity" />
        <activity
            android:name="com.igormeira.githubpop.view.pullrequest.PullRequestsActivity"
            android:configChanges="orientation|keyboardHidden|screenSize" />
        <activity
            android:name="com.igormeira.githubpop.view.repository.RepositoriesActivity"
            android:configChanges="orientation|keyboardHidden|screenSize" />
        <activity
            android:name="com.igormeira.githubpop.view.splashscreen.SplashScreenActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/AppTheme.NoActionBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>